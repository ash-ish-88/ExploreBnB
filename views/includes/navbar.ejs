<style>
  /* ---------- NAVBAR LAYOUT ---------- */
  .navbar {
    padding: 0.6rem 1.5rem;
    background-color: #fff;
    border-bottom: 1px solid #eee;
  }

  .navbar-brand i {
    color: #FE424D;
    font-size: 1.5rem;
  }

  .navbar-nav .nav-link {
    color: #333;
    font-weight: 500;
  }

  /* ---------- SEARCH BAR ---------- */
  .search-bar {
    flex-grow: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .search-box {
    position: relative;
    width: 560px; /* smaller width */
    max-width: 600px;
  }

  .search-input {
    width: 100%;
    border-radius: 50px;
    padding: 8px 40px 8px 15px;
    border: 2px solid #FE424D;
    outline: none;
    transition: 0.3s ease;
    font-size: 0.95rem;
  }

  .search-input:focus {
    box-shadow: 0 0 8px rgba(254, 66, 77, 0.4);
  }

  .search-box button {
    position: absolute;
    right: 12px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
  }

  .search-box i {
    color: #FE424D;
    font-size: 1rem;
  }

  /* ---------- DROPDOWN MENU ---------- */
  .profile-menu {
    position: relative;
  }

  .profile-btn {
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 50px;
    padding: 6px 12px;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: 0.3s;
  }

  .profile-btn:hover {
    box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
  }

  .profile-btn i {
    font-size: 1.1rem;
    color: #333;
  }

  .dropdown-content {
    display: none;
    position: absolute;
    right: 0;
    top: 120%;
    background-color: white;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    min-width: 160px;
    z-index: 1000;
  }

  .dropdown-content a {
    display: block;
    padding: 10px 15px;
    color: #333;
    text-decoration: none;
    font-size: 0.9rem;
    transition: 0.3s;
  }

  .dropdown-content a:hover {
    background-color: #f9f9f9;
    color: #FE424D;
  }

  .profile-menu.active .dropdown-content {
    display: block;
  }

  /* ---------- RESPONSIVE ---------- */
  @media (max-width: 768px) {
    .search-box {
      width: 200px;
    }

    .profile-btn {
      padding: 5px 10px;
    }

    .navbar-nav {
      flex-direction: row;
      gap: 10px;
    }

    .navbar-brand i {
      font-size: 1.3rem;
    }

    .nav-link {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .search-box {
      .nav-link {
      margin-right:13px;
    }
      width: 100px;
    }

    .search-input {
      font-size: 0.85rem;
      padding: 6px 35px 6px 12px;
    }

    .profile-btn i {
      font-size: 1rem;
    }
  }
</style>

<nav class="navbar navbar-expand-md fixed-top">
  <div class="container-fluid d-flex align-items-center justify-content-between">
    
    <!-- ðŸ”¹ LEFT SECTION -->
    <div class="d-flex align-items-center gap-3">
      <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
      <a class="nav-link" href="/listings"><b>Explore</b></a>
    </div>

    <!-- ðŸ”¹ CENTERED SEARCH BAR -->
    <div class="search-bar">
      <form class="search-box" role="search" action="/listings/search" method="get">
        <input class="search-input" type="search" name="q" placeholder="Search destination" aria-label="Search">
        <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
      </form>
    </div>

    <!-- ðŸ”¹ RIGHT SIDE DROPDOWN MENU -->
    <div class="profile-menu">
      <button class="profile-btn" id="profileBtn">
        <i class="fa-solid fa-bars"></i>
        <!-- <i class="fa-solid fa-user-circle"></i> -->
      </button>
      <div class="dropdown-content" id="dropdownMenu">
        <a href="/listings/new"><i class="fa-solid fa-podcast"></i> Become a Host</a>
        <% if (!currUser) { %>
          <a href="/signup"><i class="fa-solid fa-user-plus"></i> Sign Up</a>
          <a href="/login"><i class="fa-solid fa-user"></i> Login</a>
        <% } %>
        <% if (currUser) { %>
          <a href="/logout"><i class="fa-solid fa-right-to-bracket"></i> Logout</a>
        <% } %>
      </div>
    </div>

  </div>
</nav>

<script>
  // Toggle dropdown menu on button click
  document.addEventListener("DOMContentLoaded", () => {
    const profileMenu = document.querySelector(".profile-menu");
    const profileBtn = document.querySelector("#profileBtn");

    profileBtn.addEventListener("click", () => {
      profileMenu.classList.toggle("active");
    });

    // Close dropdown when clicking outside
    document.addEventListener("click", (e) => {
      if (!profileMenu.contains(e.target)) {
        profileMenu.classList.remove("active");
      }
    });
  });
</script>
