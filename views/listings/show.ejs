<% layout('/layouts/boilerplate.ejs')%>
<body>
  <div class="parentshow">
    <br />
    <div class="childshow">
      <br />
      <img src="<%= listing.image.url %>" alt="not visible" />
      <br />
      <p>Owned By : <i><%= listing.owner.username %></i></p>
      <br />
      <h3>
        <b>Price : &#8377; <%= listing.price.toLocaleString("en-IN") %>/night</b>
        <%= listing.location %>, <b><%= listing.country %></b>
      </h3>
      <br />
      <div class="desbutshow">
        <p><i><%= listing.description %></i></p>
        <br />

        <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
        <div class="btnshow">
          <form action="/listings/<%= listing._id %>/edit" method="get">
            <button class="btn"><b>Edit</b></button>
          </form>
          <form
            action="/listings/<%= listing._id %>?_method=delete"
            method="post"
          >
            <button class="deletebtn"><b>Delete</b></button>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </div>

  <% if (currUser) { %>
  <div class="formreviewwrite">
    <hr />
    <h3>Leave a Review</h3>
    <form
      action="/listings/<%= listing._id %>/review"
      method="post"
      novalidate
      class="needs-validation"
    >
      <fieldset class="starability-basic">
        <legend>Rating</legend>
        <input
          type="radio"
          id="no-rate"
          class="input-no-rate"
          name="review[rating]"
          value="1"
          checked
          aria-label="No rating."
        />
        <input type="radio" id="second-rate1" name="review[rating]" value="1" />
        <label for="second-rate1" title="Terrible">1 star</label>
        <input type="radio" id="second-rate2" name="review[rating]" value="2" />
        <label for="second-rate2" title="Not good">2 stars</label>
        <input type="radio" id="second-rate3" name="review[rating]" value="3" />
        <label for="second-rate3" title="Average">3 stars</label>
        <input type="radio" id="second-rate4" name="review[rating]" value="4" />
        <label for="second-rate4" title="Very good">4 stars</label>
        <input type="radio" id="second-rate5" name="review[rating]" value="5" />
        <label for="second-rate5" title="Amazing">5 stars</label>
      </fieldset>

      <div>
        <label for="comment">Comment</label>
        <textarea
          name="review[comment]"
          id="comment"
          rows="10"
          cols="35"
          required
        ></textarea>
      </div>

      <div class="invalid-feedback">Please add some comment</div>

      <div class="button-row">
        <button type="submit">Submit</button>
      </div>
    </form>
  </div>
  <% } %>

  <% if (listing.review.length > 0) { %>
  <hr />
  <div class="review-section">
    <h3>All Reviews</h3>
    <div class="review-list">
      <% listing.review.forEach(r => { %>
      <div class="review-card">
        <div class="review-author">@<%= r.author.username %></div>

        <!-- ‚≠ê Rating Stars -->
        <div class="review-rating">
          <% for(let i=1; i<=5; i++){ %> <% if(i <= r.rating){ %>
          <span class="star filled">‚òÖ</span>
          <% } else { %>
          <span class="star">‚òÜ</span>
          <% } %> <% } %>
        </div>

        <!-- üí¨ Comment -->
        <div class="review-comment"><%= r.comment %></div>

        <!-- üóë Delete Button (if allowed) -->
        <form
          method="post"
          action="/listings/<%= listing._id %>/review/<%= r._id %>?_method=delete"
        >
          <button class="deleteformshow-btn">Delete</button>
        </form>
      </div>
      <% }) %>
    </div>
  </div>
  <% } %>

  <hr />

  <!-- üåç Map Section -->
  <div>
    <h3>Where you'll be</h3>
    <div id="map" style="height: 400px; width: 100%; border-radius: 12px"></div>
  </div>

  <link
    rel="stylesheet"
    href="https://unpkg.com/leaflet/dist/leaflet.css"
  />
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

  <script>
    // üìç Coordinates (use listing.geometry if available, else fallback Delhi)
   const latitude = <%- JSON.stringify(listing.geometry ? listing.geometry.coordinates[1] : 28.6139) %>;
   const longitude = <%- JSON.stringify(listing.geometry ? listing.geometry.coordinates[0] : 77.2090) %>;
   const locationName = <%- JSON.stringify(`${listing.location}, ${listing.country}`) %>;


    // üó∫Ô∏è Initialize Map
    var map = L.map('map').setView([latitude, longitude], 13);

    // üß≠ Add OpenStreetMap Tiles
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    // üìå Add Marker + Popup
    L.marker([latitude, longitude])
      .addTo(map)
      .bindPopup(locationName)
      .openPopup();
  </script>
</body>
