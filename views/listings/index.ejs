<div class="grand">
  <div class="parent">
    <% allListings.forEach(listing => { %>
      <div class="child">
        <a href="/listings/<%= listing._id %>">
          <img class="imgcls" src="<%= listing.image.url %>" alt="">
        </a> 
        <div class="txt">
          <h4 class="price" data-original-price="<%= listing.price %>">
            &#8377;<span class="price-value"><%= Number(listing.price).toLocaleString("en-IN") %></span>/night 
            <i class="tax-info">+18% GST</i>
          </h4>
          <a href="/listings/<%=listing._id%>">
            <h3 class="loctxt"><%= listing.location%>, <%= listing.country%></h3>
          </a>
        </div>
      </div>
    <% }) %>
  </div>
</div>
<div class="load-more-container" style="text-align:center; margin: 30px 0;">
  <button id="loadMoreBtn" 
    style="padding: 10px 25px; 
           border: none; 
           background-color: #fe424d; 
           color: white; 
           border-radius: 25px; 
           cursor: pointer;">
    See More
  </button>
</div>

<script>
  const taxSwitch = document.getElementById("switchCheckDefault");

  taxSwitch.addEventListener("click", () => {
    const priceElements = document.querySelectorAll(".price");
    const taxInfos = document.querySelectorAll(".tax-info");

    priceElements.forEach((priceEl, index) => {
      const originalPrice = parseFloat(priceEl.dataset.originalPrice);
      const priceValueEl = priceEl.querySelector(".price-value");
      const taxInfoEl = taxInfos[index];

      if (taxSwitch.checked) {
        const taxedPrice = originalPrice * 1.18;
        priceValueEl.textContent = taxedPrice.toLocaleString("en-IN");
        taxInfoEl.style.display = "inline";
      } else {
        priceValueEl.textContent = originalPrice.toLocaleString("en-IN");
        taxInfoEl.style.display = "none";
      }
    });
  });


    const listings = document.querySelectorAll(".child");
  const loadMoreBtn = document.getElementById("loadMoreBtn");

  let visibleCount = 16; //
  const increment = 20; 

  function showListings() {
    listings.forEach((listing, index) => {
      listing.style.display = index < visibleCount ? "block" : "none";
    });

    if (visibleCount >= listings.length) {
      loadMoreBtn.style.display = "none";
    }
  }

  showListings();

  loadMoreBtn.addEventListener("click", () => {
    visibleCount += increment;
    showListings();
  });



</script>
