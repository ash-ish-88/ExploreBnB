<% layout("/layouts/boilerplate.ejs")  %> 
<style>
 #filters {
    display: flex;
    flex-wrap: wrap;
    margin-top: 5.8rem;
    margin-left: 110px;
    margin-right: 110px;
  }

  .filter {
    text-align: center;
    margin-left: 2rem;
    opacity: 0.8;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .tax-info {
    display: none;
    color: green;
    font-size: 0.9rem;
  }

  .tax-toggle {
    height: 50px;
    width: auto;
    border: 2px solid #fe424d;
    border-radius: 50px;
    margin-left: 40px;
    padding-left: 20px;
    padding-right: 20px;
    padding-top: 10px;
    white-space: nowrap;
  }

  .filter a {
    text-decoration: none;
    color: inherit;
  }

  /* -------- Responsive & Scrollable Filters -------- */
  @media (max-width: 992px) {
    #filters {
      overflow-x: auto;
      white-space: nowrap;
      flex-wrap: nowrap;
      margin: 5.5rem 20px 1rem 20px;
      padding-bottom: 10px;
      scrollbar-width: thin;
      scrollbar-color: #fe424d transparent;
    }

    #filters::-webkit-scrollbar {
      height: 6px;
    }

    #filters::-webkit-scrollbar-thumb {
      background-color: #fe424d;
      border-radius: 10px;
    }

    .filter {
      flex: 0 0 auto;
      margin: 0 1rem;
    }

    .tax-toggle {
      flex: 0 0 auto;
      margin-left: 1rem;
    }
  }

  @media (max-width: 576px) {
    #filters {
      padding-top: 15px;
      margin-left: 10px;
      margin-right: 10px;
    }

    .filter {
      margin: 0 0.7rem;
    }

    .tax-toggle {
      margin: 0 1rem;
      font-size: 0.9rem;
      padding-top: 12px;
    }
  }

</style>

